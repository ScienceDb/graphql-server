{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {

    "indent": [ "warn", 2 ],

    "linebreak-style": [ "error", "unix" ],

    "no-unused-vars": [ "warn", { "args": "none" }],

    "quotes": [ "warn", "single" ],

    "semi": [ "error", "always" ]

  }
}